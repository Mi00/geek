<%= form_for(game, html: {class: 'form-horizontal'}) do |f|  %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Nazwa', class: 'col-md-2 control-label' %>
    <div class="col-md-10"><%= f.text_field :name, class: 'form-control' %></div>
  </div>

  <div class="form-group">
    <%= f.label 'Min ilość graczy', class: 'col-md-2 control-label' %>
    <div class="col-md-10"><%= f.number_field :min_players, class: 'form-control' %></div>
  
  </div>

  <div class="form-group">
    <%= f.label 'Max ilość graczy', class: 'col-md-2 control-label' %>
    <div class="col-md-10"><%= f.number_field :max_players, class: 'form-control' %></div>
  
  </div>

  <div class="form-group">
    <%= f.label 'Czas gry(godz:min)', class: 'col-md-2 control-label' %>
    <div class="col-md-10"><%= f.time_select :game_time, class: 'form-control', minute_step: 10, start_hour: 0, end_hour: 10 %></div>
  
  </div>

  <div class="form-group">
    <%= f.label 'Język', class: 'col-md-2 control-label' %>
    <div class="col-md-10"><%= f.text_field :lang, class: 'form-control' %></div>
  
  </div>

  <div class="form-group">
    <%= f.label 'Opis', class: 'col-md-2 control-label' %>
    <div class="col-md-10"><%= f.text_area :description, class: 'form-control' %></div>
  
  </div>

  <div class="form-group">
    <%= f.label 'Obrazek', class: 'col-md-2 control-label' %>
    <div class="col-md-10"><%= f.text_field :image_url, class: 'form-control', placeholder: 'Podaj link do obrazka' %></div>
  
  </div>

  
    <%= f.hidden_field :user_id, value: @user.id %>
  
  <div class="row">
    <div class="col-md-2 col-md-offset-5 text-center">
      <div class="actions">
        <%= f.submit "Zapisz zmiany", class: 'btn btn-warning' %>
      </div>
    </div>
  </div>
<% end %>
