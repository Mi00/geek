<!DOCTYPE html>
<html>
  <head>
    <title>Geek</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div id="row">
        <div class="col-md-1"><%= link_to "Events", events_path, class: "btn btn-default navbar-btn" %></div>
        <% if current_user %>
          <div class="col-md-1"><%= link_to "Games", games_path, class: "btn btn-default navbar-btn" %></div>
          <div class="col-md-4 col-md-offset-4">
          Witaj <strong><%= current_user.name %><%= image_tag current_user.image %></strong>!
          <%= link_to "Sign out", signout_path, id: "sign_out" %>
        <% else %>
          <div class="col-md-2">
          <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
          </div>
        <% end %>
        </div>
      </div>
        <%= yield %>
    </div>
  </body>
</html>
